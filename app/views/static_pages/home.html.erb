<div id="search">
	<%= form_tag("/", method: "get") do %>
		<div class="search-item">
			<h2><%= label_tag(:user_id, "Enter a Flickr username or ID:") %></h2>
		</div>
		<div class="search-item">
			<%= text_field_tag :user_id, nil, class: 'form-field' %>
		</div>
		<div class="search-item">
			<%= submit_tag("Show photos", class: 'submit-btn') %>
		</div>
	<% end %>
</div>

<div id="photos">
	<% if !@user_photos.blank? %>
		<% @user_photos.each do |photo| %>
			<% info = flickr.photos.getInfo(:photo_id => photo.id) %>
			<%= link_to FlickRaw.url_photopage(info), target: "_blank" do %>
				<%= image_tag FlickRaw.url_b(info), class: 'flickr-photo' %>
			<% end %>
		<% end %>
	<% else %>
		No photos to display. Please enter a Flickr username above.
	<% end %>
</div>
